<h1><%= item.title %></h1>
<form action="<%= `save/${item.id}` %>" method="post" class="product-edit-form">
  <div class="product-edit-fields">
    <div class="field">
      <label for="item-title">Title:</label>
      <input
        id="item-title"
        type="text"
        name="title"
        value="<%= item.title %>"
      />
    </div>

    <div class="field">
      <label for="item-description">Description:</label>
      <textarea id="item-description" rows="3" name="description">
<%= item.description %></textarea
      >
    </div>

    <div class="field">
      <label for="item-price">Price:</label>
      <input
        id="item-price"
        type="text"
        name="price"
        value="<%= item.price %>"
      />
    </div>

    <div class="field">
      <label for="item-new-images"
        >New images URLs (use line break or a comma):</label
      >
      <textarea id="item-new-images" rows="3" name="newImages"></textarea>
    </div>
  </div>

  <!--comments block-->
  <% if (item.comments?.length) { %>
  <h2>Comments</h2>
  <div class="product-edit-comments">
    <% item.comments.forEach(function(comment) { %> <%-
    include('product-comment', { comment: comment }) %> <% }); %>
  </div>
  <% } %>

  <!--images block-->
  <% if (item.images?.length) { %>
  <h2>Images</h2>
  <div class="product-edit-images">
    <% item.images.forEach(function(image) { %> <%- include('product-image', {
    image: image }) %> <% }); %>
  </div>
  <% } %>

  <!--matches block-->
  <% if (item.matches?.length) { %>
  <h2>Matches</h2>
  <div class="product-matches">
    <ol>
      <% item.matches.forEach(function(match, index) { %>
        <li>
          <%- include('product-matches', { match: match }) %>
        </li>
      <% }) %>
    </ol>
  </div>
  <% } %>

  <!--block with products to match-->
  <% if (item.productsToMatch?.length) { %>
  <h2>Products to match</h2>
  <div class="products-to-match">
    <ol>
      <% item.productsToMatch.forEach(function(product, index) { %>
        <li>
          <%- include('product-to-match', { product: product }) %>
        </li>
      <% }) %>
    </ol>
  </div>
  <% } %>


  <div class="product-edit-footer">
    <button type="submit">Save changes</button>
    <a href="<%= `remove-product/${item.id}` %>">Delete product</a>
  </div>
</form>
